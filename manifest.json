{
  "manifest_version": 2,

  "name": "Volemon",
  "description": "First draft of the official Volemon chrome extension",
  "version": "1.1",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "VoleNews 0.2"
  },

  "options_page": "options.html",

  "background": {
    "scripts": ["background.js"]
  },

  "permissions": [
    "activeTab",
    "storage",
    "https://ajax.googleapis.com/",
    "<all_urls>"
  ]
}
